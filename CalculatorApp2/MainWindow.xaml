                    <GradientStop Offset="0.959"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
            <Button.Effect>
                <DropShadowEffect BlurRadius="50" Direction="319"/>
            </Button.Effect>
        </Button>

        <Button x:Name="btnFive" 
                Content="5"
                FontSize="20"
                Grid.Column="1"
                Grid.Row="2"
                Height="40" 
                Width="60"
                Click="btnNumber_Click"
                RenderTransformOrigin="0.5,0.5"
                Foreground="White">
            <Button.Background>
