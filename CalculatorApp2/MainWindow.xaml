        </Button>

        <Button x:Name="btnZero" 
                 Content="0"
                FontSize="20"
                Grid.Column="0"
                Grid.Row="4"
                Height="40" 
                Width="60"
                Click="btnNumber_Click"
                RenderTransformOrigin="0.5,0.5"
                Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF3C3C3C" Offset="0.161"/>
