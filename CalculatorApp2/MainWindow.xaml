            </Button.Background>
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.161"/>
                    <GradientStop Offset="0.959"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
            <Button.Effect>
                <DropShadowEffect BlurRadius="50" Direction="319"/>
            </Button.Effect>
        </Button>

        <Button x:Name="btnThree" 
                 Content="3"
                FontSize="20"
                Grid.Column="2"
                Grid.Row="3"
                Height="40" 
                Width="60"
                Click="btnNumber_Click"
                RenderTransformOrigin="0.5,0.5"
                Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF3C3C3C" Offset="0.161"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.161"/>
                    <GradientStop Offset="0.959"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
            <Button.Effect>
                <DropShadowEffect BlurRadius="50" Direction="319"/>
            </Button.Effect>
        </Button>

        <Button x:Name="btnPlus" 
                Content="+"
                Click="btnOperation_Click"
                FontSize="20"
                Grid.Column="4"
                Grid.Row="3"
                Height="40" 
                Width="60">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF5C5C5C" Offset="0.151"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FFC4C4C4" Offset="0.656"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.Effect>
